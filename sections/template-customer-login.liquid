<div class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8 mt-[4%]" >
  <div class="w-full max-w-md space-y-8" >
    <div class="">
      <h1 class="text-center text-3xl font-bold mt-6">
        Signing into your account
      </h1>
    </div>
    <div class="">
      {% form 'customer_login' %}
      {% if form.errors %}
        <div role="alert" class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3">
          <strong class="font-bold" >Error! </strong>
          <p class="block sm:inline"> {{ form.errors | default_errors }}</p>
        </div>
      {% endif %}
      <div class="my-2">
        <label for="email_address" class="sr-only">Email</label>
        <input
        type="email"
        id="email_address"
        name="customer[email]"
        autocomplete="email"
        class="relative block w-full px-3 py-2 border"
        placeholder="Email Address"
        >
      </div>
        {% if form.password_needed %}
          <div class="my-2">
            <label for="email_address" class="sr-only">Password</label>
            <input
            type="password"
            id="password"
            name="customer[password]"
            autocomplete="current-password"
            class="relative block w-full px-3 py-2 border"
            placeholder="Password"
            >
          </div>
          {% endif %}
          <div class="my-2 text-sm">
            <!-- NOTE: This should show the forgot password form -->
            <a href="{{ section.settings }}" class="underline text-gray-500 hover:text-gray-900" >
              Forgot your password!
            </a>
          </div>
          <button type="submit" class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900">
            Sign in
          </button>
          {% endform %}
    </div>
    {% if shop.checkout.guest_login %}
      <hr class="my-12">
      <div class="mt-6 text-center text-3xl font-bold">
        <h1 class="" >Continue as a guest</h1>
      </div>
      {% form 'guest_login' %}
          <button type="submit" class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900">
            Continue
          </button>
      {% endform}
    {% else %}
      Current customer not guest
    {% endif %}
  </div>
</div>

