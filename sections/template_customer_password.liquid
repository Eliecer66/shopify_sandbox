<div class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8 m-[2%]" >
  <div class="w-full max-w-md space-y-8" >
    <div class="">
      <h1 class="text-center text-3xl font-bold mt-6 text-gray-700">
        {{ "customer.account.reset_password" | t }}
      </h1>
    </div>
    <div>
      {% form 'reset_customer_password' %}
        <div class="flex flex-col">
          {% if form.errors %}
            <div role="alert" class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3">
              <strong
                class="font-bold"
              >
                {{ "general.message.general.error" | t }}
              </strong>
              <p class="block sm:inline"> {{ form.errors | default_errors }}</p>
            </div>
          {% endif %}
          <div class="my-2">
            <label
              for="email_address"
              class="sr-only"
            >
              {{ "customer.account.email" | t }}
            </label>
            <input
              type="email"
              id="email_address"
              name="customer[email]"
              autocomplete="email"
              class="relative block w-full px-3 py-2 border"
              placeholder="Email Address"
            >
          </div>
            <div class="my-2">
              <label
                for="password"
                class="sr-only"
              >
                {{ "customer.account.password" | t }}
              </label>
              <input
                type="password"
                id="password"
                name="customer[password]"
                autocomplete="new-password"
                class="relative block w-full px-3 py-2 border"
                placeholder="Password"
              >
            </div>

              <div class="my-2">
                <label
                  for="password_confirmation"
                  class="sr-only"
                >
                  {{"customer.account.password_confirmation" | t }}
                </label>
                <input
                  type="password"
                  id="password_confirmation"
                  name="customer[password_confirmation]"
                  autocomplete="new-password"
                  class="relative block w-full px-3 py-2 border"
                  placeholder="Confirm your password"
                >
              </div>
                <button
                  type="submit"
                  class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900"
                >
                  {{ "customer.account.reset_password" | t}}
                </button>
        </div>
        {% endform %}
    </div>
  </div>
</div>

