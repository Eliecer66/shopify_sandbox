<!--NOTE: This should be dynamic applying web component -->
<div class="w-full max-w-md space-y-8" >
  <div class="w-full max-w-md space-y-8" >
    <div class="">
      <h1 class="text-center text-3xl font-bold mt-6">
        Recover your password
      </h1>
    </div>
  <div class="">
    {% form 'recover_customer_password' %}
    {% if form.errors %}
      <div role="alert" class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3">
        <strong class="font-bold" >Error! </strong>
        <p class="block sm:inline"> {{ form.errors | default_errors }}</p>
      </div>
    {% endif %}
    <div class="my-2">
      <label for="email" class="sr-only">Email</label>
      <input
      type="email"
      id="email"
      name="email"
      autocomplete="email"
      class="relative block w-full px-3 py-2 border"
      placeholder="Email Address"
      >
    </div>
      <div class="">
        <button type="submit" class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900">
          Recover Password
        </button>
        <div class="mt-8 text-sm">
          <!-- NOTE: This should show the login form -->
          <a href="{{ page.url }}" class="underline text-gray-500 hover:text-gray-900" >
            Back to login
          </a>
        </div>
      </div>
      {% endform %}
  </div>
  </div>
</div>
