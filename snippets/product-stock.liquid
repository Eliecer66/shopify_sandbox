{% assign low_stock = 4 %}

{% for variant in variants %}
	{% if product.selected_variant == variant %}
		<div
			class="flex items-center text-2xl p-2 font-serif gap-1"
		>
			{% if variant.inventory_quantity == 0 %}
				<div
					class="flex items-center justify-center border border-gray-400 w-4 h-4 rounded-full"
				>
					<div class="border rounded-full bg-gray-400 w-3 h-3" ></div>
				</div>
				<p class="text-gray-600"> Out of stock </p>
			{% elsif variant.inventory_quantity < low_stock %}
				<div
					class="flex items-center justify-center border border-yellow-500 w-4 h-4 rounded-full"
				>
					<div class="border rounded-full bg-yellow-500 w-3 h-3" ></div>
				</div>
					<p>Low stock: {{ variant.inventory_quantity }} </p>
			{% endif %}
		</div>
	{% endif %}
{% endfor %}
